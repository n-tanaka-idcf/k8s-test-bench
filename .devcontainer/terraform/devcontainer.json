{
    "name": "terraform",
    "dockerComposeFile": [
        "../compose.yml"
    ],
    "service": "terraform",
    "runServices": [
        "terraform"
    ],
    "containerEnv": {
        "EDITOR": "code --wait",
        "LC_ALL": "C.UTF-8",
        "TZ": "Asia/Tokyo"
    },
    "remoteEnv": {
        "PATH": "/home/vscode/.local/share/aquaproj-aqua/bin:${containerEnv:PATH}",
        "AQUA_CONFIG": "/workspace/.devcontainer/terraform/aqua.yaml"
    },
    "remoteUser": "vscode",
    "workspaceFolder": "/workspace",
    "features": {
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/sshd:1": {},
        "ghcr.io/dhoeric/features/hadolint:1": {},
        "ghcr.io/aquaproj/devcontainer-features/aqua-installer:0.1.3": {
            "aqua_version": "v2.51.2"
        }
    },
    "postCreateCommand": "./.devcontainer/terraform/postCreateCommand.sh",
    "customizations": {
        "vscode": {
            "settings": {
                // Editor
                "editor.formatOnSave": true,
                // Files
                "files.insertFinalNewline": true,
                "files.trimFinalNewlines": true,
                "files.trimTrailingWhitespace": true,
                // Workspace
                "autoOpenWorkspace.enableAutoOpenAlwaysFirst": true
            },
            "extensions": [
                // Docker
                "ms-azuretools.vscode-docker",
                "exiasr.hadolint",
                // Github Actions
                "github.vscode-github-actions",
                // Terraform
                "HashiCorp.terraform",
                // Workspace
                "zoma.vscode-auto-open-workspace"
            ]
        }
    }
}
